<h1>Books</h1>


<% @books.each do |book| %>

<table>
<tr>
  <th> <%= book.title %> </th>
  <th> <%= book.body %> </th>
  <span>
   <th> <%= link_to'show',book_path(book.id) %> </th>
      <th> <%= link_to'edit',edit_book_path(book.id) %> </th>
         <th> <%= link_to'destroy',book_path(book.id),method: :delete %> </th>
  </span>
</tr>
</table>

<% end %>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
<label>Title</label>
<p>
<%= f.text_field :title %>
</p>
<p>
<label>Body</label>
</p>

<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<%= flash[:success] %>
<% end %>

